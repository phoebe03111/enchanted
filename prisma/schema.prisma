datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id              String     @id @default(uuid())
  name            String
  brand           String
  size            String
  image           String
  price           Int
  stripe_price_id String?
  categories      Category[]
}

model Category {
  id       String    @id @default(uuid())
  name     String
  products Product[]
}
